#!/usr/bin/env bash

set -e
if [ "${DEBUG}" = "true" ]; then
    set -x
fi

# Create and activate a YDB profile for simplified commands
if ! /ydb config profile list | grep -q "^local$"; then
    /ydb config profile create local \
        --endpoint grpc://localhost:${GRPC_PORT} \
        --database /local
fi

/ydb config profile activate local 2>&1 >/dev/null
/ydb --no-discovery monitoring healthcheck | grep -q GOOD || exit 1
