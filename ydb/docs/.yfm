allowHTML: true
langs: ['en','ru']
apply-presets: true
allowCustomResources: true
included: true
singlePage: true
strict: true

resources:
  style:
    - _assets/tags.css
    - _assets/badge.css
  csp:
    - "img-src":
        - "https://github.ydb.tech"
    - "frame-src":
        - "https://vk.com"
        - "https://login.vk.com"
        - "https://runtime.strm.yandex.ru"
        - "https://www.youtube.com"
        - "https://rutube.ru"

docs-viewer:
  project-name: ydb
  # no-index: true # Remove this after the public release
  langs: ['en','ru']
  themes: ['light', 'dark']
  favicon-src: https://storage.yandexcloud.net/ydb-site-assets/favicon-202305/favicon.ico
  github-url-prefix: https://github.com/ydb-platform/ydb/tree/main/ydb/docs
  metrika: 94806704
  unrestrict-revision-access: true
  need_pdf: true
  pdf: true

  
  logo-options:
    url:
      en: https://ydb.tech/
      default: https://ydb.tech/{lang}
    src: https://storage.yandexcloud.net/ydb-site-assets/logo-full-site-header.svg
    src-mobile: https://storage.yandexcloud.net/ydb-site-assets/logo-full-site-header.svg
    src-dark: https://storage.yandexcloud.net/ydb-site-assets/logo-full-site-header-dark.svg
    src-mobile-dark: https://storage.yandexcloud.net/ydb-site-assets/logo-full-site-header-dark.svg
    img-has:
      width: 80px
      offset: true
  
  index-page:
    title: YDB Open Source
    description: Горизонтально масштабируемая распределённая отказоустойчивая СУБД
    hidden: true
